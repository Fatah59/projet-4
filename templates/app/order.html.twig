{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la Billeterie !{% endblock %}

{% block body %}

    <div class="container">

        {{ form_start(orderForm) }}

        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_row(orderForm.tourAt, { 'attr': { 'class': 'tourAt'} }) }}
            </div>
        </div>
        {{ form_row(orderForm.fullday) }}
        {{ form_row(orderForm.nbVisitors) }}

        <button type="submit" class="btn btn-primary">Valider</button>
        {{ form_end(orderForm) }}

    </div>

{% endblock %}